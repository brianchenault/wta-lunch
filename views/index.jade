extends layout

block content
  section(id='watlunch', ng-controller='watlunch')
    div(class='main')
      div(id="restaurantsDiv", auto-scroll="restaurants", style="height:500px;")
        div(ng-cloak,  ng-repeat="restaurant in restaurants")
          em {{restaurant.name}}
          div(class='vote')
            a(ng-click="vote(restaurant)") vote
          ul(class='voters')
            li(ng-cloak, ng-repeat="vote in restaurant.votes." + thedate) {{vote.name}}