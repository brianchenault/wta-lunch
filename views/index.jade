extends layout

block content
  section(id='watlunch', ng-controller='watlunch')
    div(class='in')
      ul
        li
          a(class="btn-auth btn-github large login", ng-click="githubLogin()") Sign in with <b>GitHub</b>
        li
          a(class="btn-auth btn-facebook large login", ng-click="facebookLogin()") Sign in with <b>FriendFace</b>
        li
          a(class="btn-auth btn-twitter large login", ng-click="twitterLogin()") Sign in with <b>Jitter</b>
    div(class='main')
      div(id="restaurantsDiv", auto-scroll="restaurants", class="row")
        div(ng-cloak,  ng-repeat="restaurant in restaurants", class="columns large-3")
          div(class='vote')
            a(ng-click="vote(restaurant)") vote
          em {{restaurant.name}}
          ul(class='voters')
            li(ng-cloak, ng-repeat="vote in restaurant.votes." + thedate) {{vote.name}}